@model sistemaInventario.Models.Categoria
@{
    ViewBag.Title = "Eliminar";
}
<div class="text-center">
    <h2>Eliminar Categoría</h2>
</div>
<div>
    <form method="post" action="/Categorias/Delete">
        <input type="hidden" name="id_categoria" value="@Model.id_categoria" />
        <div class="form-group row">
            <label class="col-2">Nombre: </label>
            <div class="col-6">
                <input type="text" name="nombre" class="form-control" value="@Model.nombre" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-2">Descripción: </label>
            <div class="col-6">
                <input type="text" name="descripcion" class="form-control" value="@Model.descripcion" readonly />
            </div>
        </div>
        <div class="text-center">
            <a href="/Categorias/Index" class="btn btn-lg btn-outline-info">Volver</a>
            <input type="submit" id="btnEnviar" value="Eliminar" class="btn btn-lg btn-danger" />
        </div>
    </form>
</div>